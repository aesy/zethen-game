{
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "target": "ESNext",
    "types": ["@rsbuild/core/types"]
  },
  "include": ["src", "test"]
}
